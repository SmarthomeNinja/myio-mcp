{
  "manifest_version": "0.2",
  "name": "myio-mcp",
  "display_name": "myIO-MCP",
  "version": "1.0.1",
  "description": "MCP server for myIO smart home controller",
  "author": {
    "name": "SmarthomeNinja",
    "email": "info@myioserver.com",
    "url": "https://smarthome.ninja"
  },
  "homepage": "https://smarthome.ninja",
  "documentation": "https://github.com/SmarthomeNinja/myio-mcp/blob/main/README.md",
  "icon": "SHN_icon.png",
  "server": {
    "type": "node",
    "entry_point": "dist/index.js",
    "mcp_config": {
      "command": "node",
      "args": [
        "${__dirname}/dist/index.js"
      ],
      "env": {
        "MYIO_BASE_URL": "${user_config.MYIO_BASE_URL}",
        "MYIO_USERNAME": "${user_config.MYIO_USERNAME}",
        "MYIO_PASSWORD": "${user_config.MYIO_PASSWORD}"
      }
    }
  },
  "user_config": {
    "MYIO_BASE_URL": {
      "type": "string",
      "title": "myIO Server URL",
      "description": "The full URL of your myIO server (e.g. http://192.168.1.170)",
      "required": true,
      "sensitive": false
    },
    "MYIO_USERNAME": {
      "type": "string",
      "title": "Username",
      "description": "Basic auth username for your myIO controller",
      "required": true,
      "sensitive": false
    },
    "MYIO_PASSWORD": {
      "type": "string",
      "title": "Password",
      "description": "Basic auth password for your myIO server",
      "required": true,
      "sensitive": true
    }
  },
  "keywords": [
    "myIO",
    "smarthome",
    "home-automation",
    "iot"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/SmarthomeNinja/myio-mcp"
  }
}